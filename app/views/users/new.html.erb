<div class="outer"><div class="inner">
<h1>ユーザー登録</h1>
<% if @user.password != @user.password_confirmation %>
    <div class="error" style="margin: 10px">パスワードの再入力値が一致しません</div>
<% end %>


<%= form_with model: @user, local: true do |f|%>

<body style="background-color:#e0ffff;">
    <div class="filed">
        <%= f.label :name, ('ユーザー名') %><br>
        <%= f.text_field :name %><br>
    </div>
    <div class="filed">
        <%= f.label :password, ('パスワード') %><br>
        <%= f.password_field :password %><br>
    </div>
    <div class="field">
        <%= f.label :password_confirmation, ('パスワード再確認') %><br>
        <%= f.password_field :password_confirmation %><br>
    </div>
    <div class="field">
        <%= f.label :group_id, ('所属グループ') %><br>
        <%= f.collection_select :group_id, Group.all, :id, :gname, options = { include_blank: true} %><br>
    </div>

    <div class="action" style="margin-top:10px">
        <%= f.submit ('登録')%>
    </div>
</body>
<% end %>
</div></div>
