<p id="notice"><%= notice %></p>
<div class="outer"><div class="inner">
<div  class="show"><h1>登録ユーザー</h1></div>
<%= link_to '新規登録', new_user_path %>
<body style="background-color:#e0ffff;">
    <table initialTab="hyo">
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th></th>
        </tr>
      </thead>
      <% @users.each do |user| %>
       <tbody>
         <tr>
           <td><%= user.name %></td>
           <% if user.id == current_user.id %>
            <td><%= link_to '詳細', user %>
            <%= link_to '編集', edit_user_path(user) %>
            <%= link_to '削除', user, method: :delete, data: { confirm: '削除しますか？' } %></td>
           <% else %>
            <td><%= link_to '詳細', user %></td>
           <% end %>
         </tr>
       </tbody>
      <% end %>
    </table>
</body>
</div></div>
